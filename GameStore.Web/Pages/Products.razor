@page "/"
@inherits ProductsBase


@if (Products == null)
{
    <h3>Loading Products...</h3>
}
else
{
    <h3 class="mb-5">Products</h3>

    var productCount = Products.Count();

    @if (productCount > 0)
    {

        var groupedPoductsByCategory = from product in Products
                                     group product by product.CategoryId into prodByCatGroup
                                     orderby prodByCatGroup.Key
                                     select prodByCatGroup;


                @foreach (var prodGroup in groupedPoductsByCategory)
            {
                
                <h2>@prodGroup.FirstOrDefault(pg => pg.CategoryId == prodGroup.Key).CategoryName</h2>
            
                <div class="row mt-3">
                
                    <DisplayProducts Products = "@prodGroup"></DisplayProducts>
            
                </div>
                <hr class="mb-3"/>
            }
            
    }
}